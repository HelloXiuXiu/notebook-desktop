{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*" : ["./_types/*"]
    },
    "target": "es2018",
    "lib": ["es2018", "dom", "DOM.Iterable"],
    "noEmit": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "docs"
  ],
  "include": [
    "**/*.js",
    "**/*.d.ts"
  ]
}
